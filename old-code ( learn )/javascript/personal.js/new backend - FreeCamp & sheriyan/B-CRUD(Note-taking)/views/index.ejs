<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./stylesheets/index.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Note taking app</title>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900 p-10">
        <form action="/create" method="post">
            <input class="block w-full outline-none text-white px-5 py-2 rounded-md bg-zinc-800  " type="text" name="title"
                placeholder="Title goes here">
            <textarea class="block w-full mt-2 text-white px-5 py-2 rounded-md bg-zinc-800 resize-none " name="details"
                placeholder="Write your task details here"></textarea>
            <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create task">
        </form>
        <div class="tasks p-10 grid grid-cols-4 gap-3">
            <!-- to print all files if existing in files folder -->
            <% if (files.length > 0) { %>
                <% files.forEach( function(val){ %>
                    <div class="task w-54 px-3 py-4  bg-zinc-800 rounded-md">
                        <h1 class="text-white text-2xl  tracking-tight"><%= val %></h1>
                        <div class=" flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 inline-block" href="/file/<%= val %>">Read more.</a>
                            <a class="text-blue-500 inline-block mt-3 " href="/edit/<%= val %>">Edit</a>
                        </div>
                        
                        <!-- <p class="text-white mt-1">Task details: Lorem ipsum dolor sit amet consectetur adipisicing elit. Expedita provident commodi dolorum optio?</p> -->
                    </div>
                <%}); %>
            <% } else { %>
            <h3>No tasks yet.</h3>
            <% }; %>
        </div>
    </div>
</body>

</html>